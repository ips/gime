echo "gime-check-repo - GameImageâ„¢ Repository Checker"
echo "(c) 2009 by ExeGames.PL & Serenity.org.pl"

CHECK=`apt-cache show wine | sed -n -e '/Version/p' -e '/1.0.1/p'`

if [ "$CHECK" = "" ]; then
    echo "The Wine version in your repository is ok."
    exit 0
else
    echo "The Wine version in your repository is too old. Please update. Make sure the unstable Wine \
repository is on top in sources.list"
fi